<!DOCTYPE html>
<html>
  <head>
    <title>Little Esty Shop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h3>Github Repository Name: <%= @repo_search.repo_name %></h3>
    
    <h4>User Names:</h4>
    <% @repo_search.contributor_info.each do |key, value| %>
                      <p><%= key %>: <%= value %></p>
                    <% end  %>
    <% flash.each do |type, msg| %>
      <div class="flash">
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>

</html>
