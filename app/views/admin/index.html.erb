<h1>Welcome to Admin Dashboard</h1>
<div class='navigation' id='merchants'>
  <h6><%= link_to "Admin Merchants Index", admin_merchants_path %></h6>
  <h6><%= link_to "Admin Invoices Index", admin_invoices_path %></h6>
</div>

<div class="incomplete invoices">
  <p>Incomplete Invoices</p>
  <% @invoices.incomplete_invoices.each do |invoice| %>
    <p><%= link_to invoice.id, "/admin/invoices/#{invoice.id}" %></p>
    <p><%= invoice.created_at.strftime("%A, %B %d, %Y") %></p>
  <% end %>
</div>

<div class="top-customers">
  <p>Top Customers</p>
  <ol>
    <% @customers.each do |customer| %>
    <li><%= "#{customer.first_name}- #{customer.numtrans} Purchases" %></li>
    <% end %>
  </ol>

</div>
