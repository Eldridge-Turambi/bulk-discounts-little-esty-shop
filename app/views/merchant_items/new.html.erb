<div class="new_item_form">
  <h3>Create New Item</h3>
  <%= form_with model:[@merchant, @item], local: true do |f| %>
    <%= f.label "name" %>
    <%= f.text_field :name %>

    <%= f.label "description" %>
    <%= f.text_field :description %>

    <%= f.label "unit_price", "Unit Price" %>
    <%= f.text_field :unit_price %>

    <%= f.submit "Create Item"%>
  <% end %>
</div>
