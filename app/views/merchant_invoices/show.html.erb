<div class = "header" >
  <h2>Invoice #<%= @invoice.id %></h2>
  <p>Invoice Status <%= @invoice.status %></p>
  <p>Invoice Customer <%= @invoice.customer.first_name %>, <%= @invoice.customer.last_name %></p>
  <p>Invoice Created at: <%= @invoice.created_at.strftime("%A %B %m %Y") %></p>
</div>
<div class="revenue">
  <h3>Total Revenue: <%= number_to_currency(@invoice.total_revenue / 100.to_f) %></h3>
</div>
<div class = "invoice-items">
  <table>
    <tr>
      <th>Item Name</th>
      <th>Quantity</th>
      <th>Unit Price </th>
      <th>Status</th>
      <th>Submit</th>
    </tr>
  <% @invoice_items.each do |inv_itm| %>
  <div class="invoice-item-<%= inv_itm.id %>">
    <tr>
      <td><%= inv_itm.item.name%></td>
      <td><%=inv_itm.quantity %></td>
      <td><%=number_to_currency(inv_itm.unit_price.to_f / 100) %></td>
      <td><%= form_with model: [@merchant, inv_itm], local: true do |f| %></td>
          <% f.label :status %>
      <td><%= f.select :status, ["pending", "packaged", "shipped"] %></td>
      <%= f.submit %>
      <% end %>
    </tr>
  </div>
  <% end %>
  </table>
</div>
